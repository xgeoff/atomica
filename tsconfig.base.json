{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2020", "DOM"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "atomica": ["packages/atomica/src/index.ts"],
      "atomica/dom": ["packages/atomica/src/dom/index.ts"],
      "atomica/signals": ["packages/atomica/src/signals/index.ts"],
      "atomica/companion": ["packages/atomica/src/companion/index.ts"],
      "atomica/dom/jsx-runtime": ["packages/atomica/src/dom-jsx-runtime.ts"],
      "atomica/dom/jsx-dev-runtime": ["packages/atomica/src/dom-jsx-runtime.ts"],
      "atomica/shared": ["packages/shared/src/index.ts"],
      "@atomica/shared": ["packages/shared/src/index.ts"],
      "@atomica/signals": ["packages/signals/src/index.ts"],
      "@atomica/dom": ["packages/dom/src/index.ts"]
    }
  }
}
