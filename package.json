{
  "name": "@xgeoff/atomica",
  "version": "0.1.0",
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "build": "pnpm -r build",
    "test": "pnpm -r --if-present test",
    "test:signals": "pnpm -r --filter @atomica/signals test",
    "lint": "pnpm -r --if-present lint",
    "dev:example": "pnpm --filter @atomica/example-counter dev"
  },
  "devDependencies": {
    "happy-dom": "^12.10.3",
    "typescript": "^5.3.3",
    "vite": "^5.0.0",
    "vitest": "^0.34.6",
    "@types/node": "^20.10.0"
  }
}
